{% extends "layout.html" %}
{% block content %}
<body ng-app="login">
    <div class="container" ng-controller="auth">
        <img src="images/fc-logo.png" alt="Full Candidate" width="250" class="img-responsive" style="margin: 0 auto;cursor:pointer;" onclick="window.location='home';">
        <h3>Company login</h3>
        {% if app.request.query.get("err") %}
        <div class="alert alert-danger">
            <strong>Login failed!</stong> Your email ID or password was incorrect. Please try again.
        </div>
        {% endif %}
        <form method="post" action="login_action" autocomplete="off">
            <div class="form-group">
                <label for="email">Official email address</label>
                <input type="email" class="form-control" id="email" name="user_email" placeholder="Enter a valid email ID">
            </div>
            <div class="form-group">
                <label for="pwd">Password</label>
                <input type="password" class="form-control" id="pwd" name="user_password" placeholder="Enter a valid password">
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>&nbsp;&nbsp;<input type="button" value="Forgot password?" class="btn">
            <a href="registration">Create company account</a>
        </form>
        <script type="text/javascript">
        <!--
        $("#email").focus();
        //-->
        </script>
    </div>
    <div class="container-fluid">
        <div id="myModal" class="modal fade" role="dialog"></div>
    </div>
    <div id="footer" onclick="window.location='https://twitter.com/thedustmakers';"></div>
</body>
{% endblock %}